{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
	],
  "rules": {
    "indentation": 2,
    "number-leading-zero": "never",
    "at-rule-no-unknown": [
      true, {
        ignoreAtRules: ["mixin", "define-mixin"]
      }
    ],
    "declaration-empty-line-before": [ "always", {
      except: [
        "first-nested"
      ],
      ignore: [
        "after-comment",
        "after-declaration",
      ],
    }],
    "order/properties-alphabetical-order": true
  }
}
